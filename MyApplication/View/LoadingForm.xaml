<Window x:Class="MyApplication.View.LoadingForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApplication.View"
        xmlns:ctr="clr-namespace:FrontEnd.Forms.Controls;assembly=FrontEnd"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Welcome" Height="450" Width="450">

    <ctr:LoadingMask Loaded="LoadingMask_Loaded">
        <ctr:LoadingMask.Content>
            <Label/>
        </ctr:LoadingMask.Content>
    </ctr:LoadingMask>
</Window>
