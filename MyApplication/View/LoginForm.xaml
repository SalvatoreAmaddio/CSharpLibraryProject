<Window x:Class="MyApplication.View.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fr="clr-namespace:FrontEnd.Forms;assembly=FrontEnd"
        xmlns:local="clr-namespace:MyApplication.View"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:b="clr-namespace:FrontEnd.Behaviours;assembly=FrontEnd"
        mc:Ignorable="d"
        Title="LoginForm" Height="150" Width="300">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <fr:Text Placeholder="Username..."/>
        <PasswordBox Grid.Row="2" x:Name="Psw">
            <i:Interaction.Behaviors>
                <b:PlaceholderPasswordBox Placeholder="Password..."/>
            </i:Interaction.Behaviors>
        </PasswordBox>
        <Button Content="CLICK" Grid.Row="3" Click="Button_Click"/>
    </Grid>
</Window>
