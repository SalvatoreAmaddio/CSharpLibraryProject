<r:ReportPage x:Class="MyApplication.View.ReportPages.MyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:r="clr-namespace:FrontEnd.Reports;assembly=FrontEnd"
             xmlns:m="clr-namespace:MyApplication.Model"
             x:Name="Page" HeaderRow="40"
             PageNumber="1"
             Padding="10"
             mc:Ignorable="d">

    <r:ReportPage.Header>
        <Border Background="Red">
            <Label x:Name="FirstName"/>
        </Border>
    </r:ReportPage.Header>

    <r:ReportPage.Body>
        <Grid>
            <Label x:Name="LastName"/>
        </Grid>
    </r:ReportPage.Body>

    <r:ReportPage.Footer>
        <Border>
            <Label Content="Page 1"/>
        </Border>
    </r:ReportPage.Footer>

</r:ReportPage>